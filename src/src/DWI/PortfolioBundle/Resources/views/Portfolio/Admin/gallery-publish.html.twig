{% extends '::base.html.twig' %}

{% if gallery.isActive %}
    {% set verb = "unpublish" %}
    {% set action = "doUnpublish" %}
{% else %}
    {% set verb = "publish" %}
    {% set action = "doPublish" %}
{% endif %}

{% block title %}{{ verb|capitalize }} Gallery{% endblock %}

{% block body %}
    <div class="canvas">
        <div class="jumbotron">
            {{ verb|capitalize }} Gallery<br />
            <small>(You can reverse this change later)</small>
        </div>
    </div>

    <div class="canvas gray-lighter">
        <div class="form-compact">
            <div class="form-row text-center">
                Are you sure you want to {{ verb }} gallery<br /><strong>"{{ gallery.title }}"</strong>?
            </div>
        </div>

        <form method="POST" class="form-compact">
            <input type="hidden" name="{{ action }}" value="1">

            <div class="form-row">
                <input type="submit" name="submit" value="{{ verb|capitalize }}" class="btn btn-block btn-success" />
            </div>
        </form>

        <form method="POST" class="form-compact">
            <input type="hidden" name="{{ action }}" value="0">

            <div class="form-row">
                <input type="submit" name="submit" value="Cancel" class="btn btn-block btn-white" />
            </div>
        </form>
    </div>
{% endblock %}
