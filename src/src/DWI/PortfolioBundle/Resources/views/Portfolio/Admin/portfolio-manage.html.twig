{% extends ':Admin:base-admin.html.twig' %}

{% block title %}Manage Galleries{% endblock %}

{% block body %}
    <div class="canvas canvas-padded-l">
        <div class="pull-left">
            <h1>Managing <span class="text-light">Galleries</span></h1><br />
        </div>
        <div class="pull-right">
            <a href="{{ url('dwi_portfolio_create_gallery') }}" class="btn">Create Gallery</a>
        </div>
    </div>

    <div class="canvas canvas-padded-l">
        <table class="table">
            <tr>
                <td style="width: 75%;">
                    <div id="chart" style="height: 120px; margin: 0 auto; padding: 30px 0;"></div>
                    <div class="text-right"><h4 class="text-turquoise">Last 30 Days</h4></div>
                </td>
                <td class="text-center views">
                    <span class="count text-muted">{{ model.views.total|number_format }}</span><br />
                    <span class="label text-turquoise text-faded text-uppercase text-thin"><b>Total</b> Views</span>
                </td>
            </tr>
        </table>
    </div>

    <div class="canvas canvas-padded-l gray-lighter">
        <ul class="gallery-list clearfix">
            {% if model.galleries is not empty %}
                {% for key, gallery in model.galleries %}
                    <li data-gallery="{{ gallery.id }}">
                        <img class="preview" src="{{ asset(image.webPath)|imagine_filter('admin_gallery_thumb') }}" />
                        <div class="desc">
                            {% if image.description %}
                                <span title="{{ image.description }}">{{ image.description }}</span><br />
                            {% else %}
                                <span>No description set</span><br />
                            {% endif %}
                            <small class="text-muted">Modified {{ image.lastModified|date("F jS g:ia") }}</small>

                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
{% endblock %}

{% block javascript %}

    <script type="text/javascript">

        $(function () {
            $('#chart').highcharts({
                chart: {
                    type: 'area',
                    backgroundColor: '#ffffff'
                },
                title: {
                    text: null
                },
                subtitle: {
                    text: null
                },
                colors: [
                    '#1abc9c'
                ],
                credits: {
                    enabled: false
                },
                xAxis: {
                    type: 'datetime',
                    labels: {
                        enabled: false
                    }
                },
                yAxis: {
                    title: {
                        text: null
                    },
                    min: 0,
                    gridLineColor: '#ecf0f1',
                    gridLineWidth: 2,
                    labels: {
                        enabled: false
                    }
                },
                legend: {
                    enabled: false
                },
                tooltip: {
                    formatter: function() {
                        return '<b>' + Highcharts.dateFormat('%e %b', this.x) +'</b><br />'+ this.y +' views';
                    }
                },

                series: [{
                    data: {{ model.views.chartViews|json_encode() }}
                }]
            });
        });

    </script>

{% endblock %}
